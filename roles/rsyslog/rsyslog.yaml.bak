---
- hosts: all
  gather_facts: no
  
  tasks:
    - name: ADD Logging on rsyslog.conf
      debug:
        var: rsyslog.conf
    - blockinfile:
        path: /root/rsyslog.conf 
        marker_begin: "#{mark} start Logging"
        marker_end: "#{mark} end Logging"
        insertafter: "cron.none"
        state: present
        block: |
         *.notice                                                 /var/log/notice
         *.warning                                                /var/log/warning
         *.err                                                    /var/log/error
         *.crit                                                   /var/log/crit
         *.alert                                                  /var/log/alert
         *.emerg                                                  /var/log/emerg_log
      notify:
        restart rsyslog
  handlers:
    - name: restart rsyslog
      service:
         name=rsyslog 
         state=restarted
